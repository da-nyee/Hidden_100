<style>
    .table-condensed{
        font-size: 15px;
    }
</style>
    
<br/><br/><br/>
<form name="control_level" method=post action="/admin/user_manage/control_level">
    <div class="row" style="padding-left: 60px; padding-right: 60px;">
        <div class="col-8">
            <h1>
                회원등급 관리
                <button type="submit" name="submit" class="btn">변경하기</button>
            </h1>
        </div>
    </div>
    <br/>

    <div class="row" style="padding-left: 60px; padding-right: 60px;">
        <div>
            <table class="table table-hover table-condensed" id="userTable">
                <thead>
                    <tr>
                        <th style="width: 120px">이름</th>
                        <th style="width: 120px">아이디</th>
                        <th style="width: 140px">비밀번호</th>
                        <th style="width: 300px">이메일</th>
                        <th style="width: 140px">전화번호</th>
                        <th style="width: 140px">생년월일</th>
                        <th style="width: 720px">도로명주소</th>
                        <th style="width: 270px">상세주소</th>
                        <th style="width: 110px">코인수</th>
                        <th style="width: 100px">등급</th>
                        <th style="width: 100px">상태</th>
                    </tr>
                </thead>

                <tbody>
<% mem_info.forEach(function(item, i){ %>
                    <tr>
                        <td><%=item.mem_name%></td>
                        <td name="id"><%=item.mem_id%></td>
                        <td><%=item.mem_pass%></td>
                        <td><%=item.mem_email%></td>
                        <td><%=item.mem_phone%></td>
                        <td><%=item.mem_bday%></td>
                        <td><%=item.mem_addr1%></td>
                        <td><%=item.mem_addr2%></td>
                        <td><%=item.coin%></td>
                        <td name="level">
                            <select name="level">
                                <option value="<%=item.level%>" selected="selected"><%=item.level%></option>
                                <option value="silver">silver</option>
                                <option value="gold">gold</option>
                            </select>
                        </td>
                        <td><%=item.status%></td>
                    </tr>
<% }) %>
                </tbody>
            </table>
        </div>
        <br/><br/>
    </div>
</form>