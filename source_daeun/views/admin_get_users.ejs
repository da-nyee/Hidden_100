<style>
.table-condensed{
    font-size: 15px;
}
</style>

<br/><br/><br/>
<div class="container"></div>
    <div class="row" style="padding-left: 85px; padding-right: 60px;">
        <div class="col-8">
            <h1>회원조회</h1>
        </div>
    </div>

    <div class="row" style="padding-left: 85px; padding-right: 60px;">
        <div>
            <table class="table table-hover table-condensed" id="user_table">
                <thead>
                    <tr>
                        <th>이름</th>
                        <th>아이디</th>
                        <th style="width: 120px">비밀번호</th>
                        <th>이메일</th>
                        <th>전화번호</th>
                        <th style="width: 80px">생년월일</th>
                        <th style="width: 650px">도로명주소</th>
                        <th style="width: 400px">상세주소</th>
                        <th style="width: 180px">코인수</th>
                        <th>등급</th>
                        <th>상태</th>
                    </tr>
                </thead>

                <tbody>
<% mem_info.forEach(function(item, i){ %>
                    <tr>
                        <td><%=item.mem_name%></td>
                        <td><%=item.mem_id%></td>
                        <td><%=item.mem_pass%></td>
                        <td><%=item.mem_email%></td>
                        <td><%=item.mem_phone%></td>
                        <td><%=item.mem_bday%></td>
                        <td><%=item.mem_addr1%></td>
                        <td><%=item.mem_addr2%></td>
                        <td><%=item.coin%></td>
                        <td><%=item.level%></td>
                        <td><%=item.status%></td>
                    </tr>
<% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- 검색::: 이름, 생년월일, 등급, 상태-->