<script language="javascript">
    function validate(){
        let id = document.getElementById("id").value;
        let pass1 = document.getElementById("pass1").value;
        let pass2 = document.getElementById("pass2").value;

        if(pass1 != pass2){
            alert("비밀번호가 서로 다릅니다. 다시 입력해주세요!");
            return false;
        }
        return true;
    }
</script>

