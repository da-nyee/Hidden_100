	<% goodslist.forEach(function(item, i){ %>
		<div class="col-3 product">
 			<div style="height:300px; text-align: center;">
 			<%img='/img/goods/'+item.goo_img%>
			<img src=<%=img%> style="max-width:90%; max-height:100% "></div>
			<p><%=item.goo_name%></p>
			<p><%=item.goal_price%> 원</p>
			<p id=time style="font-size:15px"><%=leftTime[i].split(':')[0]%>일 <%=leftTime[i].split(':')[1]%>시간 <%=leftTime[i].split(':')[2]%>분 남음</p>
			<div style="text-align:center;">
				<button type="button" class="btn">응모하기</button>
			</div>
		</div>
 	<%})%>
</div>




	